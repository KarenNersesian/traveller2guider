@model WebApplication5.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@

<div class="page-sub-page page-create-account page-account" id="page-top">
    <div id="page-content">
        <!-- Breadcrumb -->
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Create an Account</li>
            </ol>
        </div>
        <!-- end Breadcrumb -->

        <div class="container">
            <header><h1>Create an Account</h1></header>
            <div class="row">
                <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                    <h3>Account Type</h3>


                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "form-create-account", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="radio" id="create-account-user">
                            <label>
                                @Html.RadioButtonFor(m => m.Type, "Traveller", new { id = "account-type-user", name = "account-type" })
                                Traveller
                            </label>
                        </div>
                        <div class="radio" id="agent-switch" data-agent-state="">
                            <label>
                                @Html.RadioButtonFor(m => m.Type, "Guider", new { id = "account-type-agent", name = "account-type" })
                                Guider
                            </label>
                        </div>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @for = "form-create-account-full-name" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "form-create-account-full-name" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Lastname, new { @for = "form-create-account-full-name" })
                            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", id = "form-create-account-full-name" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @for = "form-create-account-email" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "form-create-account-email" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @for = "form-create-account-password" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id="form-create-account-password" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @for = "form-create-account-confirm-password" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "form-create-account-confirm-password" })
                        </div>
                        <div class="form-group clearfix">
                            <input type="submit" class="btn pull-right btn-default" id="account-submit" value="Create an Account" />
                        </div>
                    }
                    <hr />
                    <div class="center">
                        <figure class="note">By clicking the “Create an Account” button you agree with our <a href="terms-conditions.html">Terms and conditions</a></figure>
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div>
</div>